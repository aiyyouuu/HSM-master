<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.Akun_Fragment"
    android:orientation="vertical"
    android:background="@android:color/black"
    android:layout_centerInParent="true">

    <TextView
        android:id="@+id/textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40sp"
        android:text="Welcome to HSM "
        android:textColor="#CD5C5C"
        android:textSize="30dp"
        android:layout_marginTop="50sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/nama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/textview"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="A"
        android:textColor="#CD5C5C"
        android:layout_marginTop="50sp"/>

    <ImageView
        android:id="@+id/foto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10sp"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_below="@id/textview"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/foto"
        android:layout_centerInParent="true"
        android:text="This is your email :"
        android:textColor="#CD5C5C"
        android:textSize="18sp"/>

    <TextView
        android:id="@+id/isie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerInParent="true"
        android:hint="Email"
        android:textColorHint="#CD5C5C"
        android:textColor="#CD5C5C"
        android:layout_marginTop="15sp"
        android:textSize="15sp"/>

    <Button
        android:id="@+id/edit"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/isie"
        android:text="EDIT PROFILE"
        android:background="@color/button"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/tanya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit"
        android:text="This is not your account ? "
        android:textColor="#CD5C5C"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/btn_login1"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/tanya"
        android:text="LOGOUT"
        android:background="@color/button"
        android:textColor="@android:color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

</RelativeLayout>