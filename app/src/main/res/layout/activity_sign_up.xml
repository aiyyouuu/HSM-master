<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.SignUpActivity"
    android:gravity="center_horizontal"
    android:background="@android:color/black">

    <ImageView
        android:id="@+id/foto"
        android:layout_width="200dp"
        android:layout_height="230dp"
        android:src="@drawable/ic_person_black_24dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:id="@+id/editteks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@id/foto"
        android:textSize="25sp"
        android:text="SIGN UP "
        android:textColor="#CD5C5C"
        />

    <EditText
        android:id="@+id/isinamasp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/editteks"
        android:layout_centerInParent="true"
        android:hint="Nama"
        android:textColor="#CD5C5C"
        android:textColorHint="#CD5C5C"/>

    <LinearLayout
        android:id="@+id/garis"
        android:layout_width="330dp"
        android:layout_height="2dp"
        android:background="#CD5C5C"
        android:layout_below="@id/isinamasp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
    </LinearLayout>

    <EditText
        android:id="@+id/isiesp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/garis"
        android:layout_centerInParent="true"
        android:hint="Email"
        android:textColor="#CD5C5C"
        android:textColorHint="#CD5C5C"/>

    <LinearLayout
        android:id="@+id/garis2"
        android:layout_width="330dp"
        android:layout_height="2dp"
        android:background="#CD5C5C"
        android:layout_below="@id/isiesp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
    </LinearLayout>

    <EditText
        android:id="@+id/isipsp"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/garis2"
        android:layout_centerInParent="true"
        android:hint="Password"
        android:inputType="textPassword"
        android:textColor="#CD5C5C"
        android:textColorHint="#CD5C5C"/>

    <LinearLayout
        android:id="@+id/garis3"
        android:layout_width="330dp"
        android:layout_height="2dp"
        android:background="#CD5C5C"
        android:layout_below="@id/isipsp"
        android:orientation="vertical"
        android:layout_centerHorizontal="true">
    </LinearLayout>

    <Button
        android:id="@+id/savesp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/isipsp"
        android:text="SAVE"
        android:layout_toRightOf="@id/cancelsp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:background="@color/button"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

    <Button
        android:id="@+id/cancelsp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/isipsp"
        android:text="CANCEL"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="20dp"
        android:background="@color/button"
        android:textColor="@android:color/white"
        android:textStyle="bold"/>

</RelativeLayout>