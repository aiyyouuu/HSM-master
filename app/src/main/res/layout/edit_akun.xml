<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:background="@android:color/black">

    <TextView
        android:id="@+id/editteks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_below="@id/foto"
        android:textSize="30sp"
        android:text="EDIT PROFILE"
        android:textColor="#CD5C5C"/>

    <TextView
        android:id="@+id/namaa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/editteks"
        android:text="Nama :"
        android:layout_marginLeft="95dp"
        android:textColor="#CD5C5C"
        android:layout_marginTop="30dp"/>

    <EditText
        android:id="@+id/isinama"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/namaa"
        android:layout_centerInParent="true"
        android:hint="Nama"
        android:textColor="#CD5C5C"
        android:textColorHint="#CD5C5C"/>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/isinama"
        android:text="Email :"
        android:layout_marginLeft="95dp"
        android:textColor="#CD5C5C"
        />

    <EditText
        android:id="@+id/isie"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/email"
        android:layout_centerInParent="true"
        android:hint="Email"
        android:textColor="#CD5C5C"
        android:textColorHint="#CD5C5C"/>


    <Button
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/isie"
        android:text="SAVE"
        android:layout_toRightOf="@id/cancel"
        android:layout_marginLeft="30dp"
        android:background="@color/button"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/isie"
        android:text="CANCEL"
        android:layout_marginLeft="90dp"
        android:background="@color/button"
        android:textColor="@android:color/white"
        android:textStyle="bold"
        android:layout_marginTop="10dp"/>

</RelativeLayout>